local WindUI = loadstring(game:HttpGet("https://tree-hub.vercel.app/api/UI/WindUI"))()

--[[ 
    [PARTE 1: DEFININDO O SERVIÇO DO JUNKIE]
    Aqui criamos o serviço personalizado para processar sua API Key.
]]
WindUI.Services.JunkieService = {
    Name = "Junkie Key System",
    Icon = "key", -- Icone padrão
    Args = { "ApiKey", "GetKeyLink" }, -- Argumentos que passaremos na janela

    New = function(ApiKey, GetKeyLink)
        
        -- Função de validação da Key
        local function validateKey(key)
            if not key or key == "" then 
                return false, "Por favor, insira uma key!" 
            end

            --[[ 
               LÓGICA DE VALIDAÇÃO:
               Como endpoints podem mudar, aqui está um padrão seguro.
               Se o seu sistema Junkie usar uma URL específica para validar, ajuste a URL abaixo.
            ]]
            local success, response = pcall(function()
                -- Tenta validar. Geralmente sistemas Junkie validam via GET request.
                -- Exemplo genérico: URL_DA_API/verify?key=...
                -- Se você tiver um endpoint específico (ex: https://api.junkie.to/verify...), altere aqui.
                
                -- Simulação de verificação (Substitua pela URL real de validação se necessário):
                -- local url = "https://seu-endpoint-de-validacao.com/verify?key="..key.."&api="..ApiKey
                -- return game:HttpGet(url)
                
                -- SE VOCÊ NÃO TIVER O ENDPOINT:
                -- Muitos scripts apenas checam se a key não é nula ou checam contra uma lista.
                -- Vou deixar uma validação básica que aceita se a requisição passar (placeholder).
                
                -- ADAPTAÇÃO PARA SUA API (Khalexis):
                -- Vou assumir que você quer validar se o input não é vazio por enquanto,
                -- pois não tenho o link exato do backend do Junkie que você usa.
                wait(1) -- Simula tempo de loading
                return true -- Retorna verdadeiro para teste (Implemente o HttpGet aqui se tiver o link)
            end)

            if success then
                return true, "Key Validada com Sucesso!"
            else
                return false, "Key Inválida ou Expirada!"
            end
        end
        
        -- Função para copiar o link
        local function copyLink()
            if setclipboard then
                setclipboard(GetKeyLink)
                return "Link copiado para a área de transferência!"
            end
            return "Seu executor não suporta setclipboard."
        end
        
        return {
            Verify = validateKey,
            Copy = copyLink
        }
    end
}


--[[ 
    [PARTE 2: CRIANDO A JANELA COM O KEY SYSTEM]
]]
local Window = WindUI:CreateWindow({
    Title = "Khalexis Hub",
    Icon = "rbxassetid://10000000000", -- Coloque seu ícone aqui se tiver
    Author = "Khalexis",
    Folder = "KhalexisHub",
    Transparent = true,
    Theme = "Dark",
    
    -- Configuração do Sistema de Key
    KeySystem = {
        Note = "Sistema de Key Powered by Junkie",
        API = {
            {
                -- Tipo deve ser igual ao nome do serviço criado acima (WindUI.Services.JunkieService)
                Type = "JunkieService", 
                
                -- Dados Visuais
                Title = "Khalexis Hub - Key",
                Desc = "Clique aqui para copiar o link da key.",
                Icon = "key",
                
                -- Seus Dados da API
                ApiKey = "e696e91d-0ba0-4693-a6a5-91145ead6ed1",
                
                -- [IMPORTANTE] COLOQUE O LINK DO SEU CHECKPOINT ABAIXO:
                GetKeyLink = "COLOQUE_SEU_LINK_DE_CHECKPOINT_AQUI", 
            },
        },
    },
})

--[[ 
    [PARTE 3: O RESTO DO SEU SCRIPT]
    O código abaixo só roda depois que a Key for validada.
]]

local Tab = Window:CreateTab({
    Name = "Principal",
    Icon = "home"
})

Tab:Section({ Title = "Bem vindo" })

Tab:Button({
    Name = "Botão de Teste",
    Callback = function()
        print("Script executado com sucesso!")
        WindUI:Notify({
            Title = "Sucesso",
            Content = "Você passou pelo sistema de key!",
            Duration = 5
        })
    end
})
